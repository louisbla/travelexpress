@model TravelExpress5.Models.Trajet

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Publier un trajet</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Date de départ</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-required="Le champ Date de départ est requis." id="DateDepart" name="DateDepart" type="date" value="">
            <span class="field-validation-valid text-danger" data-valmsg-for="DateDepart" data-valmsg-replace="true"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Heure de départ</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-required="Le champ Date de départ est requis." id="HeureDepart" name="HeureDepart" type="time" value="">
            <span class="field-validation-valid text-danger" data-valmsg-for="HeureDepart" data-valmsg-replace="true"></span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NbPlacesMax, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NbPlacesMax, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NbPlacesMax, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.VilleDepart, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.VilleDepart, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.VilleDepart, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.VilleArrivee, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.VilleArrivee, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.VilleArrivee, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
