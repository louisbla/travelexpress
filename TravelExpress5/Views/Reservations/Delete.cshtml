@model TravelExpress5.Models.Reservation

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Supprimer ma réservation</h2>

<h3>Êtes-vous sûr de vouloir supprimer votre réservation ?</h3>
<div>
    <h4>@Model.Trajet.VilleDepart - @Model.Trajet.VilleArrivee le @Model.Trajet.DateDepart</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NbPlaces)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NbPlaces)
        </dd>

    </dl>
    <hr />
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour", "Index")
        </div>
    }
</div>
