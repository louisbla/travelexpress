@model IEnumerable<Garderie.ViewModels.CategoriesArticleViewModels.IndexCategoriesArticleViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategorieId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CategorieId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategorieId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
