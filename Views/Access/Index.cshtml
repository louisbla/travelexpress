@model IEnumerable<Garderie.ViewModels.UserRoleViewModel>

@{
    ViewData["Title"] = "Access List";
}

<h2>Access List</h2>

<div class="row">
    <div class="col-md-10">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Roles)
                    </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => user.UserName)</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                <span>@Html.DisplayFor(m => role) | </span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.UserId">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
